<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">
<mapper namespace="com.example.phoneShopping.member.dao.MemberDao">


<select id="findAll" resultType="com.example.phoneShopping.member.domain.Member">
SELECT * FROM MEMBER;
</select>


<select id="findById" parameterType="String" resultType="com.example.phoneShopping.member.domain.Member">
SELECT mem_id, mem_pw FROM MEMBER WHERE mem_id=#{mem_id}
</select>


<insert id="createMember" parameterType="com.example.phoneShopping.member.dto.param.CreateMemberParam">
INSERT INTO MEMBER(mem_seq, mem_id, mem_pw) VALUES(#{mem_seq}, #{mem_id}, #{mem_pwd})
</insert>


<update id="updateMember" parameterType="com.example.phoneShopping.member.dto.param.UpdateMemberParam">
UPDATE MEMBER SET (mem_id, mem_pw)=(#{mem_id}, #{mem_pw})
</update>


<delete id="deleteMember" resultType="com.example.phoneShopping.member.domain.Member">
DELETE FROM MEMBER WHERE mem_id=#{mem_id}
</delete>


</mapper>